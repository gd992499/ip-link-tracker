generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  visits    Visit[]
}

model Visit {
  id        Int      @id @default(autoincrement())
  ip        String
  userAgent String
  createdAt DateTime @default(now())
  link      Link     @relation(fields: [linkId], references: [id])
  linkId    Int
}
